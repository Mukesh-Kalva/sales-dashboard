    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
      "deleteOutDir": true,
      "assets": [
        {
          "include": "**/*.hbs",
          "outDir": "dist"
        },
        {
          "include": "**/*.graphql",
          "outDir": "dist"
        }
      ],
      "watchAssets": true
    }
  }
  